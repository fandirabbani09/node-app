<h1>Update {{character.name}}:</h1>
<form id="update-character" action="/characters" method="post">
    Name: <input type="text" name="fullname" value="{{character.fullname}}"><br>
    Home: <select name="home" id="planet-selector">
        {{#each planets}}
        <option value="{{id}}">{{name}}</option>
        {{/each}}
    </select><br>
    Location: <select name="location" id="planet-selector">
        {{#each planets}}
        <option value="{{id}}">{{name}}</option>
        {{/each}}
    </select><br>
    Allegiance: <input type="text" name="allegiance" value="{{character.allegiance}}"><br>
</form>
<button onclick="updateCharacter({{character.id}})">Update</button>
<script defer>selectPlanet({{character.home}});</script>
<script defer>selectPlanet({{character.location}});</script>
<script defer>selectTechnique({{character.technique}});</script>